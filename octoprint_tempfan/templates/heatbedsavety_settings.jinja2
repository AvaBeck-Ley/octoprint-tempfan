<h4>{{ _('TempFan') }}</h4>
<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Pin:') }}</label>
        <div class="controls" data-toggle="tooltip" title="{{ _('Which Raspberry Pi BCM GPIO pin for fan') }}">
            <input type="number" step="any" min="1" class="input-mini text-right" data-bind="value: settings.plugins.heatbedsavety.pin">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Threshold:') }}</label>
        <div class="controls" data-toggle="tooltip" title="{{ _('Hotend temp that when surpassed will trigger the fan') }}">
            <input type="number" step="any" min="1" class="input-mini text-right" data-bind="value: settings.plugins.heatbedsavety.maxtemp">
        </div>
    </div>
</form>
